<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="#00ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:text="Calculator"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center|center_vertical"/>

        <Button
            android:id="@+id/bt_rate"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="汇率计算"
            android:textColor="#FFA54F"
            android:layout_gravity="right|center_vertical"
            android:textSize="8pt"
            android:background="#00ffffff"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:textColor="#333333"
        android:textSize="70sp"
        android:gravity="right|center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_ac"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#d9d9d9"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#000000"
                android:textSize="10pt"
                android:text="AC"/>

            <Button
                android:id="@+id/bt_square"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#d9d9d9"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#000000"
                android:textSize="10pt"
                android:text="√"/>

            <Button
                android:id="@+id/bt_percent"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#d9d9d9"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#000000"
                android:textSize="10pt"
                android:text="%"/>

            <Button
                android:id="@+id/bt_divide"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#FFA54F"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="÷"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="7"/>

            <Button
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="8"/>

            <Button
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="9"/>

            <Button
                android:id="@+id/bt_multiply"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#FFA54F"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="×"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="4"/>

            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="5"/>

            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="6"/>

            <Button
                android:id="@+id/bt_dec"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#FFA54F"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="1"/>

            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="2"/>

            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="3"/>

            <Button
                android:id="@+id/bt_inc"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="70dp"
                android:background="#FFA54F"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_0"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:background="#5e5e5e"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:text="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt_dot"
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:layout_height="70dp"
                    android:background="#5e5e5e"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:textColor="#ffffff"
                    android:textSize="10pt"
                    android:text="."/>

                <Button
                    android:id="@+id/bt_equal"
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:layout_height="70dp"
                    android:background="#FFA54F"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:textColor="#ffffff"
                    android:textSize="10pt"
                    android:text="="/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
